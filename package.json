{
  "name": "@antisoda/eslint-config",
  "version": "1.0.3",
  "description": "Extensible ESLint flat config for TypeScript projects",
  "keywords": [
    "eslint",
    "eslintconfig",
    "typescript",
    "flat-config",
    "react",
    "jest",
    "vitest",
    "playwright"
  ],
  "license": "MIT",
  "author": "",
  "type": "module",
  "exports": {
    "import": "./dist/main.js",
    "require": "./dist/main.cjs"
  },
  "types": "dist/main.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsup",
    "check": "concurrently npm:check:* --kill-others-on-fail",
    "check:exports": "attw --pack .",
    "check:format": "prettier --check .",
    "check:lint": "eslint -c eslint.config.js --report-unused-disable-directives --max-warnings 0",
    "check:types": "tsc -p tsconfig.json",
    "clean": "git clean dist -X --force",
    "commitlint": "commitlint --edit",
    "format": "prettier . --write",
    "prepublishOnly": "npm run build",
    "release": "changeset publish",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:coverage:view": "serve -p 5006 reports/unit/coverage",
    "test:ui": "vitest --ui",
    "test:watch": "vitest",
    "version": "changeset version",
    "postversion": "npm i --package-lock-only"
  },
  "dependencies": {
    "@eslint/js": "^9.27.0",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-playwright": "^2.2.0",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "5.2.0",
    "eslint-plugin-vitest": "^0.5.4",
    "globals": "^16.1.0"
  },
  "devDependencies": {
    "@antisoda/prettier-config": "^1.2.4",
    "@arethetypeswrong/cli": "0.18.1",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.4",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/node": "^22.15.21",
    "@vitest/coverage-v8": "^3.1.4",
    "@vitest/ui": "^3.1.4",
    "concurrently": "9.1.2",
    "eslint": "^9.25.1",
    "jest": "^29.7.0",
    "lefthook": "^1.11.13",
    "prettier": "^3.5.3",
    "react": "^19.1.0",
    "serve": "^14.2.4",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.4"
  },
  "peerDependencies": {
    "eslint": ">=8.0.0",
    "typescript": ">=4.0.0"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "*"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
