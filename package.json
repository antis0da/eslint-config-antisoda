{
  "name": "@antisoda/eslint-config",
  "version": "1.0.4",
  "description": "Extensible ESLint flat config for TypeScript projects",
  "keywords": [
    "eslint",
    "eslintconfig",
    "typescript",
    "flat-config",
    "react",
    "jest",
    "vitest",
    "playwright"
  ],
  "license": "MIT",
  "author": "",
  "type": "module",
  "exports": {
    "import": "./dist/main.js",
    "require": "./dist/main.cjs"
  },
  "types": "dist/main.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "check": "concurrently npm:check:* --kill-others-on-fail",
    "check:exports": "attw --pack .",
    "check:format": "prettier --check .",
    "check:lint": "eslint -c eslint.config.js --report-unused-disable-directives --max-warnings 0",
    "check:types": "tsc -p tsconfig.json",
    "ci:publish": "pnpm publish -r",
    "clean": "git clean dist -X --force",
    "commitlint": "commitlint --edit",
    "format": "prettier . --write",
    "release": "changeset publish",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:coverage:view": "serve -p 5006 reports/unit/coverage",
    "test:ui": "vitest --ui",
    "test:watch": "vitest",
    "version": "changeset version"
  },
  "dependencies": {
    "@eslint/js": "^9.30.1",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "@vitest/eslint-plugin": "^1.3.4",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-playwright": "^2.2.0",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.3.0"
  },
  "devDependencies": {
    "@antisoda/prettier-config": "^1.2.4",
    "@arethetypeswrong/cli": "^0.18.2",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.5",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/node": "^24.0.12",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "concurrently": "^9.2.0",
    "eslint": "^9.29.0",
    "jest": "^30.0.4",
    "lefthook": "^1.12.1",
    "prettier": "^3.6.2",
    "react": "^19.1.0",
    "serve": "^14.2.4",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "eslint": ">=8.0.0",
    "typescript": ">=4.0.0"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "*"
  },
  "packageManager": "pnpm@10.12.4+sha512.5ea8b0deed94ed68691c9bad4c955492705c5eeb8a87ef86bc62c74a26b037b08ff9570f108b2e4dbd1dd1a9186fea925e527f141c648e85af45631074680184",
  "engines": {
    "node": ">=20.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
